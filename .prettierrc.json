{
  "importOrder": ["^(node:)", "^(@.*)", "<THIRD_PARTY_MODULES>", "^[./]"],
  "importOrderSortSpecifiers": true,
  "overrides": [
    {
      "files": [
        "*.config.mjs",
        "*.config.ts",
        "*.json",
        "*.yml",
        ".markdownlintrc"
      ],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "tabWidth": 2
      }
    }
  ],
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "singleQuote": true,
  "tabWidth": 4,
  "trailingComma": "all"
}

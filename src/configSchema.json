{
  "$defs": {
    "defaultApp": {
      "type": "object",
      "properties": {
        "utis": {
          "title": "UTI's",
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "enum": ["Editor", "Viewer", "Shell", "QLGenerator", "None", "All"]
          },
          "minProperties": 1
        },
        "urlSchemes": {
          "title": "URL Schemes",
          "type": "array",
          "items": {
            "title": "URL Scheme",
            "type": "string"
          },
          "minItems": 1
        }
      },
      "additionalProperties": false,
      "anyOf": [{ "required": ["utis"] }, { "required": ["urlSchemes"] }]
    }
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "defaultAppRequirements": {
      "title": "Default App Requirements",
      "description": "Requirements an app must meet to be set as a default.",
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/defaultApp"
      }
    },
    "systemPaths": {
      "title": "System Paths",
      "description": "Paths to system files and directories",
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
